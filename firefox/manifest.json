{
  "manifest_version": 3,
  "name": "YouTube Tracker",
  "short_name": "YTTracker",
  "description": "This extension will track your time on YouTube",
  "version": "!!!VERSION!!!",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "applications": {
    "gecko": {
      "id": "yttracker@mrcraftcod.fr"
    }
  },
  "author": "Rakambda",
  "homepage_url": "https://github.com/Rakambda/YTTracker",
  "permissions": [
    "storage",
    "downloads",
    "notifications",
    "unlimitedStorage",
    "identity"
  ],
  "host_permissions": [
    "https://youtube.com/*",
    "https://www.youtube.com/*",
    "https://yttracker.rakambda.fr/*"
  ],
  "action": {
    "browser_style": true,
    "default_icon": {
      "16": "assets/icon16.png",
      "24": "assets/icon48.png",
      "32": "assets/icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "YoutubeTracker"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://yttracker.rakambda.fr/*"
      ],
      "js": [
        "lib/jquery/jquery.min.js",
        "js/YTTUtils.js",
        "js/content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "lib/jquery/jquery.min.js",
      "js/YTTUtils.js",
      "js/background.js"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    "js/YTTUtils.js",
    "js/hookerUtils.js",
    "js/hooker.js"
  ]
}
